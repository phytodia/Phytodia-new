<h2>Recettes</h2>
<div>
  <ul class="list_recipes_soap">
  <% @recipes.each do |recette| %>
  <li class="recipe_soap_card" itemscope itemtype="https://schema.org/Recipe">
    <div class="titre_recipe_soap">
      <h3 itemprop="name">Recette #<%= recette.id %></h3>

        <%= turbo_frame_tag "counter_soap_#{recette.id}" do %>
          <div class="counter_recipe_soap">
              <span id="recette_id_<%= recette.id %>">
                <%= recette.counter %>
              </span>
            <div>
            <%= link_to counter_path(recipe:recette, arrow: "up"), method: :post do %>
              <i class="fa-solid fa-caret-up"></i>
            <% end %>
            <%= link_to counter_path(recipe:recette, arrow: "down"), method: :post do %>
              <i class="fa-solid fa-caret-down"></i></div>
            <% end %>
          </div>
        <% end %>

    </div>
    <div itemprop="description">
      <h4>Ingredients</h4>
      <ul>
      <% recette.recipe_soap_ingredients.each do |ing| %>
        <li itemprop="recipeIngredient"><%= ing.qty %> g <%= ing.name_ing %></li>
      <% end %>
      </ul>
      <h4 itemprop="recipeIngredient">Qté eau : <%= recette.qty_water %></h4>
      <h4 itemprop="recipeIngredient">Type d'alcali: <%= recette.type_soude %></h4>
      <h4 itemprop="recipeIngredient">Qté soude :<%= recette.qty_soude %></h4>
      <h4 itemprop="recipeIngredient">% de surgraissage : <%= recette.surgraissage_taux %></h4>
      <h4>Propriétés</h4>
      <table>
        <tbody>
        <tr>
          <td>Dureté</td>
          <td><%= recette.hardness%></td>
        </tr>
        <tr>
          <td>Pouvoir lavant</td>
          <td><%= recette.cleansing %></td>
        </tr>
        <tr>
          <td>Douceur</td>
          <td><%= recette.condition %></td>
        </tr>
        <tr>
          <td>Pouvoir moussant</td>
          <td><%= recette.bubbly %></td>
        </tr>
        <tr>
          <td>Onctuosité</td>
          <td><%= recette.creamy %></td>
        </tr>
        <tr>
          <td>Indice Iodine</td>
          <td><%= recette.iodine %></td>
        </tr>
        </tbody>
      </table>
      <h4>Instructions</h4>
      <div itemprop="recipeInstructions">
      </div>
    </div>
  </li>
  <% end %>
</ul>
</div>
